<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <nav class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="{{ path('app_home' )}}">EventLinker</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarColor02">
            <ul class="navbar-nav me-auto">
              <li class="nav-item">
                <a class="nav-link active" href="{{ path('app_home')}}">Home
                  <span class="visually-hidden">(current)</span>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ path('app_createEvent') }}">Creer un évenement</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ path('app_myEvent') }}">Mes événements</a>
              </li>              
              <li class="nav-item">
                <a class="nav-link" href="{{ path('app_myRegistration') }}">Mes inscriptions</a>
              </li>
            </ul>
       
            {% if app.user %}
            <div class="nav-item d-flex">
                <a href="{{ path('app_logout') }}" class="btn btn-danger mx-2">Déconnexion</a>                
            </div>       
            {% else %}
            <div class="nav-item d-flex">
                <a href="{{ path('app_register') }}" class="btn btn-primary mx-1">Inscription</a>  
                <a href="{{ path('app_login') }}" class="btn btn-primary mx-1">Connexion</a>  
            </div> 
            {% endif %}
          </div>
        </div>
      </nav>
    <body>
        {% block body %}
        
        {% endblock %}
    </body>
</html>
