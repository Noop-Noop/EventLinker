{% extends 'base.html.twig' %}
{% set routeName = app.request.attributes.get('_route') %}
{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
    <div class="container">
        <div class=" alert alert-success my-4"> 
            {{ message}}
        </div>                
    </div>
    {% endfor %}
    {% if evenements is empty %}
        <div class="container text-center align-items m-6">
            <p>Aucune inscription à des évenement</p>
        </div>
    {% else %}
        <div class="container m-6 p-6">
            <div class="row">
                {% for evenement in evenements %}
                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 my-2">
                    <div class="card d-flex flex-column mb-4   h-100">
                        <img src="{{ asset('uploads/images/' ~ evenement.image) }}" class="card-img-top object-fit-contain h-50"  alt="photo indisponible">
                        <div class="card-body">
                            <h1>{{ evenement.Id }}</h1>
                            <h5 class="card-title">{{ evenement.nom }}</h5>       
                            <p class="card-text flex-grow-1 text-truncate">{{ evenement.description }}</p> 
                            <div class="text-right">
                                {% if app.user %}
                                    {% if isUserRegistered(app.user, evenement) %}
                                        <a href="{{ path('app_evenement_unregister', {'evenementId': evenement.id, 'routeName': routeName}) }}" class="btn btn-danger">Se désinscrire</a>
                                    {% else %}
                                        <a href="{{ path('app_evenement_register', {'evenementId': evenement.id, 'routeName': routeName}) }}" class="btn btn-success">S'inscrire</a>
                                    {% endif %} 
                                {% else %}
                                        <a href="{{ path('app_login') }}" class="btn btn-primary">Se connecter</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>            
                </div>
                {% endfor %}             
            </div>
        </div>
    {% endif %}

{% endblock %}
